<h1>Admin Users</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Admin?</th>
        </tr>
    </thead>
    <tbody>
        <%= for user <- @users do %>
            <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= if user.is_admin, do: "Yes", else: "No" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<.link href={~p"/admin"}>Back to Admin Dashboard</.link>